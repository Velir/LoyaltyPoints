@using System.Web.Mvc.Ajax
@using System.Web.Mvc.Html
@using Sitecore.Commerce.XA.Feature.Account
@using Sitecore.Commerce.XA.Feature.Account.Models
@using Sitecore.Mvc
@using Sitecore.XA.Foundation.MarkupDecorator.Extensions
@using Sitecore.XA.Foundation.SitecoreExtensions.Extensions
@using Feature.LoyaltyPoints.Website.Models
 
@model UnusedCouponsRenderingModel


<div @Html.Sxa().Component("cxa-recentorders-component", Model.Attributes) data-cxa-component-type="component">
    <hr /> 
    @if (!String.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="error-message">
            <p>@Model.ErrorMessage</p>
        </div>
    }
    else
    {
        <div class="component-content">
           
            <div>
                <table data-bind="visible: coupons().length">

                    <tbody data-bind="foreach: coupon">
                    <tr>
                        <td data-bind="value: coupon"></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>



